rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper to check if user is the owner of the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
      
      match /expenses/{expenseId} {
        allow read, write: if isOwner(userId);
      }
      
      match /budgets/{budgetId} {
        allow read, write: if isOwner(userId);
      }
    }

    // --- Organisations Collection ---
    match /organisations/{orgId} {
      // Create: Anyone signed in can create an organisation
      allow create: if isSignedIn();
      
      // Read/List: Allow if user is listed in 'members' OR is the 'adminId'
      // Note: For list queries to work, the query MUST contain a filter on 'members' or 'adminId'
      allow read: if isSignedIn() && (request.auth.uid in resource.data.members || request.auth.uid == resource.data.adminId);
      
      // Update: Admin can update anything, OR a user can add themselves (Accept Invite)
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.adminId 
        || 
        (
           // Allow adding self to members
           request.resource.data.members.size() == resource.data.members.size() + 1
           && request.auth.uid in request.resource.data.members
           && request.resource.data.members.hasAll(resource.data.members)
        )
      );
      
      // Delete: Only Admin
      allow delete: if isSignedIn() && request.auth.uid == resource.data.adminId;

      // --- Organisation Expenses Subcollection ---
      match /expenses/{expenseId} {
         // Define parent Org data for easier access
         // Note: get() costs 1 read. 
         
         // Read: Allow if user is a member of the parent organisation
         allow read: if isSignedIn() && 
           request.auth.uid in get(/databases/$(database)/documents/organisations/$(orgId)).data.members;
         
         // Write (Create/Update/Delete): Allow if Admin OR member has 'readwrite' permission
         allow write: if isSignedIn() && (
             // Is Admin
             request.auth.uid == get(/databases/$(database)/documents/organisations/$(orgId)).data.adminId
             ||
             // OR has readwrite permission. 
             // Accessing map property safely:
             get(/databases/$(database)/documents/organisations/$(orgId)).data.permissions[request.auth.uid] == 'readwrite'
         );
      }
    }
    // --- Invitations Collection ---
    match /invitations/{inviteId} {
      allow read, write: if isSignedIn();
    }
  }
}
